<%- include('../header') %>
        
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0 font-size-18">All Users Information</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                        <li class="breadcrumb-item active">Users Information</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table mb-0">

                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>Email</th>
                                                    <th>MobileNo</th>
                                                    <th>Role</th>
                                                    <th>ProfileImage</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% users.forEach((user, i) => { %>
                                                        <tr>
                                                            <th scope="row"><%= i+1 %></th>
                                                            <td><%= user.firstName %></td>
                                                            <td><%= user.lastName %></td>
                                                            <td><%= user.email %></td>
                                                            <td><%= user.mobileNo %></td>
                                                            <td><%= user.role %></td>
                                                            <td>
                                                                <img src="<%= user.profileImage %>" width="70" class="rounded-circle" />
                                                            </td>
                                                            <td>
                                                                <a href="/admin/edit-user/<%= user.id %>">Edit</a>
                                                            </td>
                                                            
                                                        </tr>
                                                <% }) %>
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- end card body -->
                            </div>
                            <!-- end card -->
                        </div>
                        <!-- end col -->

                    </div>
                    <!-- end row -->
                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->
           
<%- include('../footer') %>