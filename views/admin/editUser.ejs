<%- include('../header') %>

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0 font-size-18">Edit User Details</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                                            <li class="breadcrumb-item active">User Details</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    
                                    <div class="card-body p-4">
        
                                        <div class="row">
                                            <form action="/admin/update-user/<%= user.id %>" method="post" enctype="multipart/form-data">
                                                <div class="col-lg-6">
                                                <div>
                                                    <div class="mb-3">
                                                        <label for="example-text-input" class="form-label">First Name</label>
                                                        <input class="form-control" type="text" name="firstName" value="<%= user.firstName %>"  id="example-text-input">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="example-search-input" class="form-label">Last Name</label>
                                                        <input class="form-control" type="text" name="lastName" value="<%= user.lastName %>"  id="example-search-input">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="example-email-input" class="form-label">Email</label>
                                                        <input class="form-control" type="email" name="email" value="<%= user.email %>"  id="example-email-input">
                                                    </div>
                                                    
                                                    <div class="mb-3">
                                                        <label for="example-tel-input" class="form-label">Mobile NO</label>
                                                        <input class="form-control" type="text" name="mobileNo" value="<%= user.mobileNo %>" id="example-tel-input">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="example-password-input" class="form-label">Profile Image</label>
                                                        <input class="form-control" type="file" name="profileImage" id="example-password-input">
                                                    </div>
                                                    
                                                </div>
                                            </div>
                                            <div class="mt-4">
                                                <button type="submit" class="btn btn-primary w-md">Submit</button>
                                            </div>
                                            </form>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->


                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                
                
<%- include('../footer') %>