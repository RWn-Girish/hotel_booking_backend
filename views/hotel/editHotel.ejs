<%- include('../header') %>
            

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0 font-size-18">Edit Hotel</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                                            <li class="breadcrumb-item active">Edit Hotel</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <div class="row">
                            <div class="col-6">
                                <div class="card">

                                    <div class="card-body p-4">
                                        <form action="/hotel/update-hotel/<%= hotel._id %>" method="POST" enctype="multipart/form-data">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div>
                                                        <div class="mb-3">
                                                            <label for="example-text-input" class="form-label">Hotel Name</label>
                                                            <input class="form-control" type="text" name="hotelName" value="<%= hotel.hotelName %>" placeholder="Enter hotel name" >
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="example-search-input" class="form-label">Location</label>
                                                            <input class="form-control" type="search" name="location" value="<%= hotel.location %>" placeholder="Enter hotel location" >
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="example-email-input" class="form-label">Email</label>
                                                            <input class="form-control" type="email" name="email" value="<%= hotel.email %>" placeholder="Enter your email" id="example-email-input">
                                                        </div>
                                                        
                                                        <div class="mb-3">
                                                            <label for="example-number-input" class="form-label">MobileNo</label>
                                                            <input class="form-control" type="number" name="mobileNo" value="<%= hotel.mobileNo %>" placeholder="Enter your mobile number" id="example-number-input">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="example-file-input" class="form-label">Hotel Image</label>
                                                            <input class="form-control" type="file" name="hotelImages" id="example-file-input" multiple>
                                                            <% if (hotel.hotelImages && hotel.hotelImages.length > 0) { %>
                                                                <div class="mt-2">
                                                                    <% hotel.hotelImages.forEach(function(image) { %>
                                                                        <img src="<%= image %>" alt="Hotel Image" style="width: 100px; height: auto; margin-right: 10px;">
                                                                    <% }); %>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                        <div class="mb-3">
                                                            <button type="submit" class="btn btn-primary w-md">Submit</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->

                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

<%- include('../footer') %>